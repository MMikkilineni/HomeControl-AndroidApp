<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark">

    <TextView
        android:id="@+id/txt_homecntrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home Control"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="30dp" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_homecntrl"
        android:layout_marginLeft="63dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="56dp"
        android:text="ToggleButton" />

    <TextView
        android:id="@+id/txt_light"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Light1"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="25dp"
        android:layout_alignBaseline="@+id/toggleButton"
        android:layout_alignBottom="@+id/toggleButton"
        android:layout_toRightOf="@+id/toggleButton"
        android:layout_toEndOf="@+id/toggleButton"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp" />

    <Button
        android:id="@+id/btn_disconnect"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/holo_green_dark"
        android:text="Disconnect" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="Light2"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="25dp"
        android:layout_below="@+id/toggleButton"
        android:layout_alignLeft="@+id/txt_light"
        android:layout_alignStart="@+id/txt_light" />

    <ToggleButton
        android:id="@+id/toggleButton2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/toggleButton"
        android:layout_alignStart="@+id/toggleButton"
        android:layout_alignTop="@+id/textView2"
        android:text="ToggleButton" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Light3"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="25dp"
        android:layout_alignBaseline="@+id/toggleButton3"
        android:layout_alignBottom="@+id/toggleButton3"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <ToggleButton
        android:id="@+id/toggleButton3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/toggleButton2"
        android:layout_alignStart="@+id/toggleButton2"
        android:layout_below="@+id/toggleButton2"
        android:layout_marginTop="21dp"
        android:text="ToggleButton" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:text="Fan"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="25dp"
        android:layout_below="@+id/toggleButton3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <Button
        android:id="@+id/btn_fan"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/toggleButton3"
        android:layout_alignStart="@+id/toggleButton3"
        android:background="@color/colorAccent"
        android:text="Auto" />

    <Button
        android:id="@+id/btn_themes"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Themes"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txt_sensor"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="52dp"
        android:textColor="@android:color/holo_green_dark"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
